{
  "productName": "wows-monitor",
  "directories": {
    "output": "release"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist/desktop",
      "to": "dist/desktop",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "favicon-tray.ico",
      "to": ""
    },
    {
      "from": "favicon-tray.png",
      "to": ""
    }
  ],
  "generateUpdatesFilesForAllChannels": true,
  "win": {
    "publisherName": [
      "Benjamin Heilmann"
    ],
    "icon": "dist/desktop/assets/icons",
    "target": [
      {
        "target": "nsis-web",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "https://api.wows-monitor.com/releases"
    }
  },
  "nsisWeb": {
    "artifactName": "wows-monitor-setup-${version}.${ext}"
  },
  "linux": {
    "executableName": "wows-monitor",
    "artifactName": "wows-monitor-setup-${version}.${ext}",
    "category": "Utility.Monitor",
    "icon": "dist/desktop/assets/icons",
    "target": [
      "deb",
      "snap"
    ]
  }
}
