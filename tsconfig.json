{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@generated/*": [
        "app/generated/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@interfaces/*": [
        "app/interfaces/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@components/*": [
        "app/components/*"
      ]
    },
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
